{% extends "layout.njk" %}

{% block head %}
    <title>Foodfy</title>
    <link rel="stylesheet" href="./styles.css">   
{% endblock %}

{% block content %}
    <div class="Banner">
        <div class="TextBanner">
            <h1>As melhores receitas</h1>
            <p>Aprenda a construir os melhores pratos 
                com receitas criadas por profissionais do mundo inteiro.</p>
        </div>          
        <img class="chef" src="./images/chef.png" alt="Chef Image">    
    </div>        
    <section class="MostAccessed">
        <h1>Mais Acessadas</h1>
        <div class="Recipes">
            {% for recipe in recipes %}
                <div class="Recipe" id="{{recipes.indexOf(recipe)}}">
                    <img src="{{recipe.image}}" alt="">
                    <h3>{{recipe.title}}</h3>
                    <p>por {{recipe.author}}</p>
                </div>    
            {% endfor %} 
        </div>        
        
    </section>
    <script src="/scripts.js"></script>
{% endblock %}
    