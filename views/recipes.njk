{% extends "layout.njk" %}

{% block head %}
    <title>Foodfy - Receitas</title>
    <link rel="stylesheet" href="./styles.css">   
{% endblock %}

{% block content %}
    <div class="Recipes">
        {% for recipe in recipes %}
        <div class="Recipe" id="{{recipes.indexOf(recipe)}}">
            <img src="{{recipe.image}}" alt="">
            <h3>{{recipe.title}}</h3>
            <p>por {{recipe.author}}</p>
        </div>       
        {% endfor %} 
    </div>           
    
    <script src="./scripts.js"></script> 
{% endblock %}